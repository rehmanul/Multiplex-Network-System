{
    "name": "multiplex-network-system",
    "version": "1.0.0",
    "private": true,
    "description": "Production-grade multiplex political-institutional network modelling system",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces",
        "test:unit": "npm run test:unit --workspaces",
        "test:integration": "npm run test:integration --workspaces",
        "test:e2e": "npm run test:e2e --workspaces",
        "lint": "eslint packages/*/src --ext .ts,.tsx",
        "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,json}\"",
        "dev": "npm run dev --workspace=packages/webapp",
        "dev:api": "npm run dev --workspace=packages/api",
        "db:start": "docker-compose up -d neo4j postgres redis",
        "db:stop": "docker-compose down",
        "ingest": "npm run ingest --workspace=packages/ingestion"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.1.0",
        "typescript": "^5.3.2",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}